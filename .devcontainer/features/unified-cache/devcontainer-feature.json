{
  "id": "unified-cache",
  "version": "1.1.0",
  "name": "Unified Package Cache",
  "containerEnv": {
    "GOCACHE": "/cache/go-build",
    "GOMODCACHE": "/cache/go-mod",
    "npm_config_cache": "/cache/npm",
    "YARN_CACHE_FOLDER": "/cache/yarn",
    "PNPM_HOME": "/cache/pnpm",
    "TF_PLUGIN_CACHE_DIR": "/cache/terraform",
    "PIP_CACHE_DIR": "/cache/pip",
    "ANSIBLE_GALAXY_CACHE_DIR": "/cache/ansible/galaxy",
    "ANSIBLE_ROLES_PATH": "/cache/ansible/roles",
    "ANSIBLE_COLLECTIONS_PATH": "/cache/ansible/collections"
  },
  "mounts": [
    {
      "source": "ecoma-unified-cache",
      "target": "/cache",
      "type": "volume"
    }
  ]
}
